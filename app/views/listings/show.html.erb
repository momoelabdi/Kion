

<%= form_tag listing_path(@listing), method: :patch do %>
  <div class="form-group">
    <%= label_tag :id %>
    <%= text_field_tag :id, @listing.id, class: 'form-control', readonly: true %>
  </div>
  <div class="form-group">
    <%= label_tag :title %>
    <%= text_field_tag :title, @listing.title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :location %>
    <%= text_field_tag :location, @listing.location, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_area_tag :description, @listing.description, class: 'form-control' %>
    <input type="hidden" name="user_id" value="<%=  @currentUser %>">
  </div>
  <%= submit_tag 'Update Listing', class: 'btn btn-primary' %>
<% end %>
  <form action="/listings/<%= @listing.id %>" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" name="_method" value="delete" class="btn btn-danger">
  <input type="hidden" name="user_id" value="<%=  @current_user %>">
  <input type="submit" value="Delete" class="btn btn-danger">
</form>
